    <listener>
        <listener-class>com.listen.ServletRequestListenerDemo</listener-class>
    </listener>

    <listener>
        <listener-class>com.listen.ServletRequestAttributedListener</listener-class>
    </listener>

    <listener>
        <listener-class>com.listen.OnlineUserList</listener-class>
    </listener>
</web-app>